<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="top"
    android:background="@color/white"
    android:gravity="top"
    android:orientation="vertical"
    android:padding="10dp">

    <FrameLayout
        android:id="@+id/layout_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:src="@mipmap/ad_profile_line" />

        <LinearLayout
            android:id="@+id/botttom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.displayfort.app.TextUtils.TypefaceTextViewBrandenReg
                    android:id="@+id/adp_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="4dp"
                    android:text="Ads Profile one"
                    android:textColor="@color/head_text"
                    android:textSize="20sp" />

                <com.displayfort.app.TextUtils.TypefaceTextViewBrandenLight
                    android:id="@+id/status_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/adp_title_tv"
                    android:layout_toRightOf="@+id/adp_title_tv"
                    android:text="PENDING"
                    android:textColor="@color/yellow"
                    android:textSize="12sp" />


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.displayfort.app.TextUtils.TypefaceTextViewBrandenReg
                    android:id="@+id/video_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginRight="8dp"
                    android:drawableLeft="@mipmap/schedule_video_icon"
                    android:drawablePadding="8dp"
                    android:text="10"
                    android:textColor="@color/text_color"
                    android:textSize="14sp" />

                <com.displayfort.app.TextUtils.TypefaceTextViewBrandenReg
                    android:id="@+id/image_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginRight="8dp"
                    android:drawableLeft="@mipmap/schedule_images_icon"
                    android:drawablePadding="8dp"
                    android:text="10"
                    android:textColor="@color/text_color"
                    android:textSize="14sp" />

                <com.displayfort.app.TextUtils.TypefaceTextViewBrandenReg
                    android:id="@+id/gif_tv"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"

                    android:layout_marginRight="8dp"
                    android:drawableLeft="@mipmap/schedule_gif_icon"
                    android:drawablePadding="8dp"
                    android:text="10"
                    android:textColor="@color/text_color"
                    android:textSize="14sp" />

                <com.displayfort.app.TextUtils.TypefaceTextViewBrandenReg
                    android:id="@+id/www_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginRight="8dp"
                    android:drawableLeft="@mipmap/schedule_web_icon"
                    android:drawablePadding="8dp"
                    android:text="10"
                    android:textColor="@color/text_color"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>


</LinearLayout>
