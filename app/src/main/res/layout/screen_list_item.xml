<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container_left_rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@null"
    android:orientation="vertical"
    android:padding="1dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/SCREEN_HEXA_size_half"
        android:layout_marginRight="4dp">

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="10dp"
            app:cardElevation="8dp"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/SCREEN_HEXA_size_half"
                android:paddingStart="20dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/screen_size_tv"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:padding="8dp"
                    android:src="@mipmap/caution_icon"
                    android:tint="@color/colorPrimary" />

                <LinearLayout
                    android:id="@+id/bottom_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.displayfort.app.TextUtils.TypefaceTextViewBrandenBold
                        android:id="@+id/title_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:text="Mega Wall"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp" />

                    <com.displayfort.app.TextUtils.TypefaceTextViewBrandenReg
                        android:id="@+id/partner_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="2dp"
                        android:drawableLeft="@mipmap/partner_mini_icon"
                        android:drawablePadding="8dp"
                        android:drawableTint="@color/dark_text_color"
                        android:gravity="center_vertical"
                        android:text="Partner Name"
                        android:textColor="@color/text_color"
                        android:textSize="14sp" />

                </LinearLayout>

                <com.displayfort.app.TextUtils.TypefaceTextViewBrandenLight
                    android:id="@+id/creation_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/bottom_ll"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:drawableLeft="@mipmap/calander_mini_icon"
                    android:drawablePadding="8dp"
                    android:drawableTint="@color/dark_text_color"
                    android:text="12, JAN 2019"
                    android:textColor="@color/text_color"
                    android:textSize="14sp" />

                <com.displayfort.app.TextUtils.TypefaceTextViewBrandenLight
                    android:id="@+id/screen_size_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/creation_date"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:drawableLeft="@mipmap/screen_mini_icon"
                    android:drawablePadding="8dp"
                    android:drawableTint="@color/dark_text_color"
                    android:text="42 INCH"
                    android:textAllCaps="true"
                    android:textColor="@color/text_color"
                    android:textSize="14sp" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

        <ImageView
            android:layout_width="@dimen/SCREEN_HEXA_size_big"
            android:layout_height="@dimen/SCREEN_HEXA_size_big"
            android:layout_centerInParent="true"
            android:background="@mipmap/screen_polygon" />

        <com.displayfort.app.widgets.HexagonMaskView
            android:id="@+id/hexaImage_iv"
            android:layout_width="@dimen/SCREEN_HEXA_size"
            android:layout_height="@dimen/SCREEN_HEXA_size"
            android:layout_centerInParent="true"
            android:layout_margin="4dp"
            android:src="@mipmap/partner_avatar"
            android:visibility="visible" />
    </RelativeLayout>


</RelativeLayout>