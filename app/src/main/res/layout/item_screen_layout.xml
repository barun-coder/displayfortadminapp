<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="10dp"
    app:cardElevation="4dp">


    <RelativeLayout
        android:id="@+id/layout_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp">


        <ImageView
            android:id="@+id/screen_iv"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="4dp"
            android:src="@mipmap/screen_icon" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/status_tb"
            android:layout_toRightOf="@+id/screen_iv"
            android:orientation="vertical">

            <com.displayfort.app.TextUtils.TypefaceTextViewBrandenBold
                android:id="@+id/title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mega Wall"
                android:textColor="@color/dark_text_color"
                android:textSize="16sp" />

            <com.displayfort.app.TextUtils.TypefaceTextViewBrandenReg
                android:id="@+id/unique_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Werlington Street Line O"
                android:textColor="@color/text_color"
                android:textSize="14sp" />

            <com.displayfort.app.TextUtils.TypefaceTextViewBrandenReg
                android:id="@+id/expiry_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20/JAN/2019"
                android:visibility="gone"
                android:textColor="@color/text_color"
                android:textSize="14sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/status_tb"
            style="@style/Base.Widget.AppCompat.DrawerArrowToggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/toggle_selector"
           />
    </RelativeLayout>


</android.support.v7.widget.CardView>
