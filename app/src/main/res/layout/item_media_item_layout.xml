<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/media_folder_rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@color/white"
    android:padding="4dp"
    app:cardElevation="4dp">


    <RelativeLayout
        android:id="@+id/layout_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:padding="0dp">


        <ImageView
            android:id="@+id/screen_iv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@mipmap/interior" />


        <com.displayfort.app.TextUtils.TypefaceTextViewBrandenReg
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/screen_iv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="Video Folder"
            android:textColor="@color/dark_text_color"
            android:textSize="16sp" />

        <com.displayfort.app.TextUtils.TypefaceTextViewBrandenLight
            android:id="@+id/files_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/screen_iv"
            android:text="10"
            android:textColor="@color/text_color"
            android:textSize="14sp" />
    </RelativeLayout>


</android.support.v7.widget.CardView>
