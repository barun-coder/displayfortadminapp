<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:scrolling_image_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container_Ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include layout="@layout/custom_toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="0dp">

        <ImageView
            android:id="@+id/loaog_login_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="10dp"
            android:src="@mipmap/fp_emoji" />

        <com.displayfort.app.TextUtils.TypefaceTextViewBrandenReg
            android:id="@+id/fp_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/loaog_login_iv"
            android:layout_centerHorizontal="true"
            android:layout_margin="8dp"
            android:gravity="center"
            android:padding="0dp"
            android:text="Enter your registered email Id"
            android:textColor="@color/dark_text_color"
            android:textSize="14sp" />

        <com.displayfort.app.TextUtils.TypefaceEditTextBrandenReg
            android:id="@+id/email_et"
            style="@style/editTextLabel"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/fp_tv"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/edit_new_box"
            android:backgroundTint="@color/black"
            android:cursorVisible="true"
            android:gravity="center"
            android:hint="xx@xxx.com"
            android:inputType="text"
            android:padding="8dp"
            android:textCursorDrawable="@null" />


        <com.displayfort.app.TextUtils.TypefaceButtonBrandenReg
            android:id="@+id/send_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email_et"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:background="@drawable/button_selector"
            android:gravity="center"
            android:paddingLeft="30dp"
            android:paddingTop="12dp"
            android:paddingRight="30dp"
            android:paddingBottom="12dp"
            android:text="Send"
            android:textColor="@drawable/text_selector"
            android:textSize="18sp"
            android:textStyle="bold" />


        <com.displayfort.app.TextUtils.TypefaceTextViewBrandenMed
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/send_btn"
            android:layout_centerHorizontal="true"
            android:layout_margin="25dp"
            android:gravity="center"
            android:padding="0dp"
            android:text="New Password will be sent to your registered email Id"
            android:textColor="@color/text_color"
            android:textSize="14sp" />

    </RelativeLayout>

</LinearLayout>
